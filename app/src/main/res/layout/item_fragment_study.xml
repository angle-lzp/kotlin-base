<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/cour_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_course" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cour_title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingBottom="5dp"
                android:text="Android Multidex原理及实现"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cour_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1AE6E6"
                android:text="免费课程"
                android:textColor="#44BBBB"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/cour_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="已完成100%"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3" />

</LinearLayout>