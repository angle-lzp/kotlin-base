<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="描边圆角"
        android:textColor="#00f"
        android:textSize="20dp"
        app:backgroundTint="@color/teal_200"
        app:backgroundTintMode="screen"
        app:cornerRadius="30dp"
        app:icon="@android:drawable/ic_dialog_alert"
        app:iconSize="35dp"
        app:iconTint="#ff0000"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="五角星"
        android:textColor="#00f"
        android:textSize="20dp"
        app:backgroundTint="@color/teal_200"
        app:backgroundTintMode="screen"
        app:cornerRadius="30dp"
        app:icon="@android:drawable/star_big_on"
        app:iconGravity="textStart"
        app:iconPadding="30dp"
        app:iconSize="35dp"
        app:iconTint="#ff0000"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />

    <!--    按钮多选单选的情况-->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/btn_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:checkedButton="@id/btn01"
        app:selectionRequired="true"
        app:singleSelection="true">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn01"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="button1"
            app:backgroundTint="@color/teal_200" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn02"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="button2"
            android:textColor="#00f" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn03"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="button3"
            android:textColor="#00f"
            app:backgroundTint="@color/teal_200" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginTop="30dp"
        android:background="@color/purple_700"
        android:clickable="true"
        android:drawableLeft="@android:drawable/ic_notification_clear_all"
        android:drawableTop="@android:drawable/ic_menu_help"
        android:drawableRight="@android:drawable/ic_notification_overlay"
        android:drawableBottom="@android:drawable/ic_notification_overlay"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="11111111111111111111111111111111111111111111111111111111111"
        android:textColor="#ff0000"
        android:textSize="20dp" />

</LinearLayout>